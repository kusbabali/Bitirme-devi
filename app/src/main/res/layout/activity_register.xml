<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegisterActivity">

    <LinearLayout
        android:id="@+id/login_page_LinearLayout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesab Oluşturunuz"
            android:textSize="38sp"
            android:textStyle="bold"/>




        <EditText
            android:id="@+id/RegisterPageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14sp"
            android:background="@drawable/login_edit_text"
            android:drawableStart="@drawable/icon_person"
            android:hint="Ad ve Soyad Giriniz..."
            android:layout_marginTop="50dp"
            android:padding="10dp" />



        <EditText
            android:id="@+id/RegisterPageEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:background="@drawable/login_edit_text"
            android:drawableStart="@drawable/icon_email"
            android:hint="e-posta adresinizi giriniz..."
            android:layout_marginTop="15dp"
            android:padding="10dp" />



        <EditText
            android:id="@+id/RegisterPagePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@drawable/login_edit_text"
            android:drawableStart="@drawable/icon_lock"
            android:hint="Şifre giriniz:"
            android:layout_marginTop="15dp"
            android:padding="10dp" />
        <EditText
            android:id="@+id/RegisterPagePass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@drawable/login_edit_text"
            android:drawableStart="@drawable/icon_lock_again"
            android:hint="Şifrerinizi Tekrar giriniz..."
            android:layout_marginTop="15dp"
            android:padding="10dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/RegisterPageRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_background"
            android:text="Üye Ol"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="30dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_page_LinearLayout_first"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabınız Var mı?"/>

        <TextView
            android:id="@+id/RegisterPageLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/link"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="Giriş Yap"/>

    </LinearLayout>

</RelativeLayout>